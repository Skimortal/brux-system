{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'production.detail_title'|trans }}{% endblock %}

{% block logged_in_content %}
    <h1 class="mb-4">{{ 'production.detail_title'|trans }}</h1>

    {% form_theme form 'form/adminator_bootstrap_5_layout.html.twig' %}

    {% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message|trans }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row gap-20 pos-r">
        {# Linke Spalte: Produktions-Daten #}
        <div class="col-md-6">
            <div class="bgc-white p-20 bd">
                <h6 class="c-grey-900">{{ 'production.data'|trans }}</h6>
                <div class="mT-30">
                    {{ form_start(form, { attr: { 'data-turbo': 'false' } }) }}

                    {{ form_row(form.externalId) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.permalink) }}
                    {{ form_row(form.postThumbnailUrl) }}
                    {{ form_row(form.contentHtml) }}
                    {{ form_row(form.excerptHtml) }}

                    {{ form_row(form.needsLightingTechnician) }}
                    {{ form_row(form.needsSoundTechnician) }}
                    {{ form_row(form.needsSetupTechnician) }}

                    {{ form_row(form.grandstand) }}

                    {# Technicians Collection #}
                    <div class="bd bgc-white p-20 mt-4">
                        <div class="layers">
                            <div class="layer w-100 mB-10">
                                <h3 class="lh-1">{{ 'production.technicians'|trans }}</h3>
                                {{ form_errors(form.technicians) }}
                            </div>

                            <div class="layer w-100"
                                 data-controller="form-collection"
                                 data-turbo="false"
                                 data-form-collection-index-value="{{ form.technicians|length }}">

                                <template data-form-collection-target="prototype">
                                    <tr data-collection-item>
                                        <td><span data-collection-counter>__n__</span></td>
                                        <td>{{ form_widget(form.technicians.vars.prototype.name) }}</td>
                                        <td>{{ form_widget(form.technicians.vars.prototype.email) }}</td>
                                        <td>{{ form_widget(form.technicians.vars.prototype.phone) }}</td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-outline-danger confirmRemoveItem js-collection-remove"
                                                    data-action="click->form-collection#remove"
                                                    role="button" data-confirm="{}"
                                                    data-confirm-message="{{ 'confirm_remove'|trans }}">
                                                {{ 'remove'|trans }}
                                            </button>
                                        </td>
                                    </tr>
                                </template>

                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th style="width: 30%;">{{ 'production_technician.name'|trans }}</th>
                                        <th style="width: 25%;">{{ 'production_technician.email'|trans }}</th>
                                        <th style="width: 20%;">{{ 'production_technician.phone'|trans }}</th>
                                        <th style="width: 15%;">{{ 'action'|trans }}</th>
                                    </tr>
                                    </thead>

                                    <tbody data-form-collection-target="list">
                                    {% for technicianForm in form.technicians %}
                                        <tr data-collection-item>
                                            <td width="5%"><span data-collection-counter>{{ loop.index }}</span></td>
                                            <td>{{ form_widget(technicianForm.name) }}</td>
                                            <td>{{ form_widget(technicianForm.email) }}</td>
                                            <td>{{ form_widget(technicianForm.phone) }}</td>
                                            <td>
                                                <button type="button"
                                                        class="btn btn-outline-danger confirmRemoveItem js-collection-remove"
                                                        data-action="click->form-collection#remove"
                                                        role="button" data-confirm="{}"
                                                        data-confirm-message="{{ 'confirm_remove'|trans }}">
                                                    {{ 'remove'|trans }}
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>

                                    <tfoot>
                                    <tr>
                                        <td colspan="5">
                                            <button type="button"
                                                    class="btn btn-success mt-3 js-collection-add">
                                                {{ 'add_technician'|trans }}
                                            </button>
                                        </td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    {# Contact Persons Collection #}
                    <div class="bd bgc-white p-20 mt-4">
                        <div class="layers">
                            <div class="layer w-100 mB-10">
                                <h3 class="lh-1">{{ 'production.contact_persons'|trans }}</h3>
                                {{ form_errors(form.contactPersons) }}
                            </div>

                            <div class="layer w-100"
                                 data-controller="form-collection"
                                 data-turbo="false"
                                 data-form-collection-index-value="{{ form.contactPersons|length }}">

                                <template data-form-collection-target="prototype">
                                    <tr data-collection-item>
                                        <td><span data-collection-counter>__n__</span></td>
                                        <td>{{ form_widget(form.contactPersons.vars.prototype.name) }}</td>
                                        <td>{{ form_widget(form.contactPersons.vars.prototype.email) }}</td>
                                        <td>{{ form_widget(form.contactPersons.vars.prototype.phone) }}</td>
                                        <td class="text-center">{{ form_widget(form.contactPersons.vars.prototype.hauptansprechperson) }}</td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-outline-danger confirmRemoveItem js-collection-remove"
                                                    data-action="click->form-collection#remove"
                                                    role="button" data-confirm="{}"
                                                    data-confirm-message="{{ 'confirm_remove'|trans }}">
                                                {{ 'remove'|trans }}
                                            </button>
                                        </td>
                                    </tr>
                                </template>

                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th style="width: 25%;">{{ 'production_contact_person.name'|trans }}</th>
                                        <th style="width: 25%;">{{ 'production_contact_person.email'|trans }}</th>
                                        <th style="width: 25%;">{{ 'production_contact_person.phone'|trans }}</th>
                                        <th style="width: 20%;" class="text-center">{{ 'production_contact_person.hauptansprechperson'|trans }}</th>
                                        <th style="width: 15%;">{{ 'action'|trans }}</th>
                                    </tr>
                                    </thead>

                                    <tbody data-form-collection-target="list">
                                    {% for contactPersonForm in form.contactPersons %}
                                        <tr data-collection-item>
                                            <td width="5%"><span data-collection-counter>{{ loop.index }}</span></td>
                                            <td>{{ form_widget(contactPersonForm.name) }}</td>
                                            <td>{{ form_widget(contactPersonForm.email) }}</td>
                                            <td>{{ form_widget(contactPersonForm.phone) }}</td>
                                            <td class="text-center">{{ form_widget(contactPersonForm.hauptansprechperson) }}</td>
                                            <td>
                                                <button type="button"
                                                        class="btn btn-outline-danger confirmRemoveItem js-collection-remove"
                                                        data-action="click->form-collection#remove"
                                                        role="button" data-confirm="{}"
                                                        data-confirm-message="{{ 'confirm_remove'|trans }}">
                                                    {{ 'remove'|trans }}
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>

                                    <tfoot>
                                    <tr>
                                        <td colspan="6">
                                            <button type="button"
                                                    class="btn btn-success mt-3 js-collection-add">
                                                {{ 'add_contact_person'|trans }}
                                            </button>
                                        </td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 row">
                        <div class="col-sm-8">
                            <a href="{{ path('app_production_index') }}" class="btn btn-secondary">{{ 'back_to_list'|trans }}</a>
                            <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
                        </div>
                        <div class="col-sm-4" style="text-align: right;">
                            {% if production.id and is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_production_delete', {'id': production.id}) }}" class="btn btn-danger confirmRemoveItem" role="button" data-confirm="{}" data-confirm-message="{{ 'confirm_remove'|trans }}">{{ 'delete'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>

                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        {# Rechte Spalte: Kalender & Events Liste #}
        <div class="col-md-6">
            {# NEU: Kalender #}
            {% if production.id %}
                <div class="bgc-white p-20 bd mb-4">
                    <h6 class="c-grey-900">{{ 'production.events_calendar'|trans }}</h6>
                    <div class="mT-20">
                        <div id="production-events-calendar"
                             data-production-id="{{ production.id }}"
                             data-edit-route="{{ path('app_production_event_edit', {id: '__ID__'}) }}"></div>
                    </div>
                </div>
            {% endif %}

            {# Events Liste #}
            <div class="bgc-white p-20 bd">
                <h6 class="c-grey-900">
                    {{ 'production.events'|trans }}
                    {% if production.id %}
                        <div class="float-end">
                            <a href="{{ path('app_production_event_new', {production: production.id}) }}" class="btn btn-success">{{ 'create_new'|trans }}</a>
                        </div>
                    {% endif %}
                </h6>
                <div class="mT-30">
                    {% if production.events is defined and production.events|length > 0 %}
                        <table class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>{{ 'production_event.date'|trans }}</th>
                                <th>{{ 'production_event.time'|trans }}</th>
                                <th>{{ 'production_event.room'|trans }}</th>
                                <th>{{ 'action'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for event in production.events %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_production_event_edit', {id: event.id}) }}">
                                            {{ event.date ? event.date|date('d.m.Y') : '-' }}
                                        </a>
                                    </td>
                                    <td>
                                        {{ event.timeFrom ?? '-' }}
                                        {% if event.timeTo %} - {{ event.timeTo }}{% endif %}
                                    </td>
                                    <td>{{ event.room ? event.room.name : '-' }}</td>
                                    <td class="text-nowrap">
                                        <a href="{{ path('app_production_event_edit', {id: event.id}) }}" title="{{ 'edit'|trans }}">
                                            <span class="badge bg-info"><i class="ti-pencil-alt"></i></span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="text-center text-muted m-0">— {{ 'no_events'|trans }} —</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if production.id %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                if (typeof window.initProductionCalendar === 'function') {
                    window.initProductionCalendar(
                        'production-events-calendar',
                        {{ production.id }},
                        '{{ path('app_production_event_edit', {id: '__ID__'})|raw }}'
                    );
                }
            });

            document.addEventListener('turbo:load', function() {
                if (typeof window.initProductionCalendar === 'function') {
                    window.initProductionCalendar(
                        'production-events-calendar',
                        {{ production.id }},
                        '{{ path('app_production_event_edit', {id: '__ID__'})|raw }}'
                    );
                }
            });
        </script>
    {% endif %}
{% endblock %}
