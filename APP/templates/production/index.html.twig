{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'production.list'|trans }}{% endblock %}

{% block logged_in_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <h4 class="c-grey-900 mB-20">
                        {{ 'production.list'|trans }}

                        <div class="float-end">
                            <a href="{{ path('app_production_new') }}" class="btn btn-success">{{ 'create_new'|trans }}</a>
                        </div>
                    </h4>

                    {% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message|trans }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% form_theme filterForm 'form/adminator_bootstrap_5_layout.html.twig' %}
                    {% set hasActiveFilters = (filterForm.vars.data.showAll ?? false) %}
                    <div class="d-flex align-items-center justify-content-between mb-2"
                         style="border-bottom: 1px solid; padding-bottom: 10px; margin-bottom: 30px !important;">
                        <h4
                            class="c-grey-900 mB-20 collapse-toggle {{ hasActiveFilters ? '' : 'collapsed' }}"
                            data-bs-toggle="collapse"
                            data-bs-target="#productionFilters"
                            role="button"
                            aria-expanded="{{ hasActiveFilters ? 'true' : 'false' }}"
                            aria-controls="productionFilters"
                        >
                            {{ 'filter_title'|trans }}
                            <i class="ti-filter ms-2 chev"></i>
                        </h4>
                    </div>

                    <div id="productionFilters" class="collapse {{ hasActiveFilters ? 'show' }}">
                        <div class="mb-4">
                            {{ form_start(filterForm, { method: 'get', attr: { class: 'row g-3 align-items-end' } }) }}

                            <div class="col-12">
                                {{ form_row(filterForm.showAll) }}
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">{{ 'filter'|trans }}</button>
                                <a href="{{ path('app_production_index') }}" class="btn btn-warning">{{ 'reset'|trans }}</a>
                            </div>

                            {{ form_end(filterForm) }}
                        </div>
                    </div>

                    <table class="mcDataTable table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>{{ 'production.external_id'|trans }}</th>
                            <th>{{ 'production.title'|trans }}</th>
                            <th>{{ 'production.events_count'|trans }}</th>
                            <th>{{ 'action'|trans }}</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>{{ 'production.external_id'|trans }}</th>
                            <th>{{ 'production.title'|trans }}</th>
                            <th>{{ 'production.events_count'|trans }}</th>
                            <th>{{ 'action'|trans }}</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for production in productions %}
                            <tr>
                                <td><a href="{{ path('app_production_edit', { id: production.id }) }}">{{ production.externalId ?? '-' }}</a></td>
                                <td><a href="{{ path('app_production_edit', { id: production.id }) }}">{{ production.title }}</a></td>
                                <td><a href="{{ path('app_production_edit', { id: production.id }) }}">{{ production.events|length }}</a></td>
                                <td class="text-nowrap">
                                    <a href="{{ path('app_production_edit', {id: production.id}) }}" title="{{ 'edit'|trans }}">
                                        <span class="badge bg-info"><i class="ti-pencil-alt"></i></span>
                                    </a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('app_production_delete', {id: production.id}) }}" class="confirmRemoveItem" title="{{ 'delete'|trans }}" role="button" data-confirm="{}" data-confirm-message="{{ 'confirm_remove'|trans }}">
                                            <span class="badge bg-danger"><i class="ti-trash"></i></span>
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
