{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'production_event.detail_title'|trans }}{% endblock %}

{% block logged_in_content %}
    <h1 class="mb-4">{{ 'production_event.detail_title'|trans }}</h1>

    {% form_theme form 'form/adminator_bootstrap_5_layout.html.twig' %}

    {% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message|trans }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="bgc-white p-20 bd">
        {{ form_start(form, { attr: { 'data-turbo': 'false' } }) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.production) }}
                {{ form_row(form.eventIndex) }}
                {{ form_row(form.date) }}
                {{ form_row(form.timeFrom) }}
                {{ form_row(form.timeTo) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.room) }}
                {{ form_row(form.status) }}
                {{ form_row(form.reservationStatus) }}
                {{ form_row(form.quota) }}
                {{ form_row(form.incomingTotal) }}
                {{ form_row(form.freeSeats) }}
            </div>
        </div>

        {{ form_row(form.reservationNote) }}
        {{ form_row(form.categories) }}
        {{ form_row(form.contactPersons) }}

        <div class="mb-3 row mt-4">
            <div class="col-sm-8">
                {% set backUrl = production_event.production ? path('app_production_edit', { id: production_event.production.id }) : path('app_production_event_index') %}
                {% set backUrlString = 'back_to_list' %}
                <a href="{{ backUrl }}" class="btn btn-secondary">{{ backUrlString|trans }}</a>
                <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
            </div>
            <div class="col-sm-4" style="text-align: right;">
                {% if production_event.id and is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_production_event_delete', {'id': production_event.id}) }}" class="btn btn-danger confirmRemoveItem" role="button" data-confirm="{}" data-confirm-message="{{ 'confirm_remove'|trans }}">{{ 'delete'|trans }}</a>
                {% endif %}
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
