{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'production_event.list'|trans }}{% endblock %}

{% block logged_in_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <h4 class="c-grey-900 mB-20">
                        {{ 'production_event.list'|trans }}

                        <div class="float-end">
                            <a href="{{ path('app_production_event_new') }}" class="btn btn-success">{{ 'create_new'|trans }}</a>
                        </div>
                    </h4>

                    {% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message|trans }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <table class="mcDataTable table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>{{ 'production_event.production'|trans }}</th>
                            <th>{{ 'production_event.date'|trans }}</th>
                            <th>{{ 'production_event.time'|trans }}</th>
                            <th>{{ 'production_event.room'|trans }}</th>
                            <th>{{ 'production_event.status'|trans }}</th>
                            <th>{{ 'action'|trans }}</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>{{ 'production_event.production'|trans }}</th>
                            <th>{{ 'production_event.date'|trans }}</th>
                            <th>{{ 'production_event.time'|trans }}</th>
                            <th>{{ 'production_event.room'|trans }}</th>
                            <th>{{ 'production_event.status'|trans }}</th>
                            <th>{{ 'action'|trans }}</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for production_event in production_events %}
                            <tr>
                                <td><a href="{{ path('app_production_event_edit', { id: production_event.id }) }}">{{ production_event.production ? production_event.production.displayName : '-' }}</a></td>
                                <td><a href="{{ path('app_production_event_edit', { id: production_event.id }) }}">{{ production_event.date ? production_event.date|date('d.m.Y') : '-' }}</a></td>
                                <td><a href="{{ path('app_production_event_edit', { id: production_event.id }) }}">
                                        {{ production_event.timeFrom ?? '-' }}
                                        {% if production_event.timeTo %} - {{ production_event.timeTo }}{% endif %}
                                    </a></td>
                                <td><a href="{{ path('app_production_event_edit', { id: production_event.id }) }}">{{ production_event.room ? production_event.room.name : '-' }}</a></td>
                                <td><a href="{{ path('app_production_event_edit', { id: production_event.id }) }}">{{ production_event.status ? production_event.status.getLabel()|trans : '-' }}</a></td>
                                <td class="text-nowrap">
                                    <a href="{{ path('app_production_event_edit', {id: production_event.id}) }}" title="{{ 'edit'|trans }}">
                                        <span class="badge bg-info"><i class="ti-pencil-alt"></i></span>
                                    </a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('app_production_event_delete', {id: production_event.id}) }}" class="confirmRemoveItem" title="{{ 'delete'|trans }}" role="button" data-confirm="{}" data-confirm-message="{{ 'confirm_remove'|trans }}">
                                            <span class="badge bg-danger"><i class="ti-trash"></i></span>
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
